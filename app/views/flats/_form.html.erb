<%= bootstrap_form_for(@flat) do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_field :address, class: 'form-control' %>
  </div>
    <div class="form-group">
    <%= f.text_field :picture_url, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.number_field :number_of_guests, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.number_field :price_per_night, class: 'form-control' %>
  </div>
  <div class="mt-3">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', flats_path, class: 'btn btn-danger ml-2' %>
  </div>
<% end %>